{
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string"
		},
		"name": {
			"type": "string"
		}
	},
	"anyOf": [
		{
			"type": "object",
			"properties": {
				"layout": {"const": "9-grid"},
				"slots": {
					"type": "array",
					"items": {
						"$ref": "./square.schema.json"
					}
				}
			},
			"required": ["slots"]
		},
		{
			"type": "object",
			"properties": {
				"layout": {"const": "packet-simulator"}
			}
		}
	],
	"required": ["name", "layout"]
}